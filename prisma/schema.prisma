generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  password    String
  apiProfiles ApiProfile[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model ApiProfile {
  id          String   @id @default(cuid())
  name        String
  apiKey      String   @unique @default(uuid())
  apiSecret   String   @unique @default(uuid())
  callbackUrl String
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @unique
  Token       Token[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Token {
  id           String     @id @default(cuid())
  accessToken  String     @unique @default(uuid())
  refreshToken String     @unique @default(uuid())
  expiresAt    DateTime
  apiProfile   ApiProfile @relation(fields: [apiProfileId], references: [id])
  apiProfileId String     @unique
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
